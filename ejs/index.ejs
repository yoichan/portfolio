<%
var designExhibits = exhibitData[0];
var engineerExhibits = exhibitData[1];
var otherExhibits = exhibitData[2];
%>
<!doctype html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/responsive_modal_design.css">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/script.js"></script>

    <link
        href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@300&family=Montserrat+Alternates:wght@100;200;300;400&display=swap"
        rel="stylesheet">


    <title>Yayoi Ito's Portfolio</title>
</head>

<body>
    <div class="content">
        <!-- 本文 -->
        <header>
            <h1>Yayoi Ito</h1>
            <p>Engineer / Designer / Coder</p>
        </header>


        <h2 id="header_works">Works</h2>
        <div class="section">

            <h3>Designing</h3>
            <div class="items">

                <%for (let i = 0; i < designExhibits.length; i++) { %>
                <% var modal_id = "design_" + i %>

                <div class="exhibit item">
                    <div class="frame">
                        <a href="" data-modal="#<%- modal_id %>" class="modal__trigger">
                            <img src="<%- designExhibits[i].image_path %>" alt="<%- designExhibits[i].image_alt %>">
                        </a>
                    </div>
                    <p><%- designExhibits[i].title %></p>
                </div>

                <%- include('./_modal', {modal_id: modal_id, exhibit: designExhibits[i]}); %>
                <% } %>
            </div>

            <h3>Engineering</h3>
            <div class="items">

                <%for (let i = 0; i < engineerExhibits.length; i++) { %>
                <% var modal_id = "engineer_" + i %>

                <div class="exhibit item">
                    <div class="frame">
                        <a href="" data-modal="#<%- modal_id %>" class="modal__trigger">
                            <img src="<%- engineerExhibits[i].image_path %>" alt="<%- engineerExhibits[i].image_alt %>">
                        </a>
                    </div>
                    <p><%- engineerExhibits[i].title %></p>
                </div>

                <%- include('./_modal', {modal_id: modal_id, exhibit: engineerExhibits[i]}); %>
                <% } %>

            </div>
            <h3>Others</h3>
            <div class="items">

                <%for (let i = 0; i < otherExhibits.length; i++) { %>
                <% var modal_id = "other_" + i %>

                <div class="exhibit item">
                    <div class="frame">
                        <a href="" data-modal="#<%- modal_id %>" class="modal__trigger">
                            <img src="<%- otherExhibits[i].image_path %>" alt="<%- otherExhibits[i].image_alt %>">
                        </a>
                    </div>
                    <p><%- otherExhibits[i].title %></p>
                </div>

                <%- include('./_modal', {modal_id: modal_id, exhibit: otherExhibits[i]}); %>
                <% } %>

            </div>
        </div>
        <h2 id="header_about">About</h2>
        <div class="section">
            <h3>Topics</h3>
            <div class="items">
                <div class="exhibit item">
                    <div class="frame">
                        <img src="images/nature.jpg" alt="発芽する様子の写真">
                    </div>
                    <p>Nature</p>
                </div>
                <div class="exhibit item">
                    <div class="frame">
                        <img src="images/mom.jpg" alt="赤ちゃんの手の写真">
                    </div>
                    <p>Mom</p>
                </div>
                <div class="exhibit item">
                    <div class="frame">
                        <img src="images/work_and_life.jpg" alt="ワークアンドライフの写真">
                    </div>
                    <p>Life & Work</p>
                </div>
            </div>
            <h3>Tweets</h3>
            <div class="item">
                <a class="twitter-timeline" data-width="260" data-height="300" data-theme="light"
                    href="https://twitter.com/takerin_77?ref_src=twsrc%5Etfw">Tweets by takerin_77</a>
                <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>
            <h3>Contact</h3>
            <div class="item">
                ご連絡はこちらへお願いします。<br>
                <a href="mailto:yayoi.t.ito@gmail.com">yayoi.t.ito@gmail.com</a>
            </div>
        </div>

        <footer>
            © 2020 Yayoi Ito
        </footer>
    </div>
</body>
<script src="js/responsive_modal_design.js"></script>

</html>